/**index.wxss**/
.container {
	width: 100%;
	min-height: 100%;
}
.swiper-container{
	width: 100%;
	position: relative;  
}
.swiper_box {
	width: 100%;
	height:700rpx;
}
  
swiper-item image {
	width: 100%;
	display: inline-block;
	overflow: hidden;
	height:700rpx;
}

.swiper-container .dots{  
	position: absolute;  
	left: 0;  
	right: 0;  
	bottom: 20rpx;  
	display: flex;  
	justify-content: center;  
}  
.swiper-container .dots .dot{  
	margin: 0 8rpx;  
	width: 14rpx;  
	height: 14rpx;  
	background: #fff;  
	border-radius: 50%;  
	transition: all .6s;  
	opacity: .5;
}  
.swiper-container .dots .dot.active{  
	width: 14rpx;  
	opacity: 1;
}
.mould{
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	background-color: #fff;
	margin-top: 20rpx;
	overflow: hidden;
}
.mould image{
	width: 100%;
	display: block
}
.mould .describ{
	width: 100%;
	font-size: 30rpx;
	color: #333;
	line-height: 42rpx;
	padding: 30rpx 0 10rpx;
}
.mould .time{
	width: 100%;
	font-size: 28rpx;
	color: #8a8a8a;
}

.mod-weixin{
	width: 100%;
	padding: 30rpx 20rpx;
	font-size: 30rpx;
	color: #333;
	background: #fff;
	margin: 20rpx 0;
	box-sizing: border-box;
}