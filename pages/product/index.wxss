
.mod-block{
	width: 100%;
	overflow: hidden;
	padding: 20rpx;
	box-sizing:border-box;
	font-size: 34rpx;
	background: #fff;
}

.mod-block .title{
	width: 100%;
	line-height: 40rpx;
	font-weight: bolder;
	color: #333;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #e6e6e6;
}

.mod-block .ctn{
	text-indent: 2em;
	padding-top: 20rpx;
	width: 100%;
	color: #666;
}
.mod-block image{
	display: block;
}

